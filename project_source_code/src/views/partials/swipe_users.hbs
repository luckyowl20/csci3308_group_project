<div class="card" id="card" data-user-id="{{user.id}}">
    <img src="{{user.profile_picture_url}}" alt="{{user.display_name}}" class="user-photo">
    <div class="info">
        <h2 id="user-name">{{user.display_name}}</h2>
        <p class="username">@{{user.username}}</p>
        <p id="user-bio">{{user.biography}}</p>
    </div>
</div>