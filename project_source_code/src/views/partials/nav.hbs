<!-- nav.hbs -->
<header>
  <nav class="navbar navbar-expand-lg px-4" style="background-color: #2d6842;">
    <div class="container-fluid justify-content-end">
      <ul class="navbar-nav d-flex flex-row gap-4">
        <li class="nav-item">
          <a class="nav-link text-white fw-semibold" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white fw-semibold" href="/explore">Explore</a>
        </li>
        {{#if user}}
        <li class="nav-item">
          <a class="nav-link text-white fw-semibold" href="/chat">Chat</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white fw-semibold d-flex align-items-center" href="/profile/">
            <span class="me-2">Profile</span>
            <div class="border border-white rounded-circle overflow-hidden" style="width: 28px; height: 28px;">
              {{#if user.profile_picture_url}}
                <img src="{{user.profile_picture_url}}" alt="Profile" style="width: 100%; height: 100%; object-fit: cover;">
              {{else}}
                <img src="https://via.placeholder.com/28?text=U" alt="Default" style="width: 100%; height: 100%; object-fit: cover;">
              {{/if}}
            </div>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white fw-semibold" href="/auth/logout">Logout</a>
        </li>
        {{else}}
        <li class="nav-item">
          <a class="nav-link text-white fw-semibold" href="/auth/login">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white fw-semibold" href="/auth/register">Register</a>
        </li>
        {{/if}}
      </ul>
    </div>
  </nav>
</header>