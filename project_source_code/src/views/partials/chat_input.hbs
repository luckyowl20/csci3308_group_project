<!-- views/partials/chat_input.hbs -->
<form id="chat-form" method="POST" action="/chat/messages/send">
  <input type="hidden" name="receiver_id" value="{{chatPartnerId}}">
  <div class="input-group">
    <input type="text" class="form-control" name="message_text" placeholder="Type a message..." required>
    <button class="btn btn-primary" type="submit">Send</button>
  </div>
</form>
