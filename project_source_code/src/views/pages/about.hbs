<!-- views/pages/about.hbs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>About | LuckyMoment</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <!-- Page Content -->
  <div class="container-fluid py-5 px-4" style="min-height: 100vh;">
    <div class="row justify-content-center align-items-center">
      <div class="col-lg-6 mb-4">
        <h1 class="fw-bold display-3 text-success" style="font-family: 'Lalezar'">Lucky<span class="text-dark" style="font-family: 'Lalezar'">Moment</span></h1>
        <h3 class="fw-semibold text-success" style="font-family: 'Montserrat'">Meet People Authentically</h3>
        <h5 class="text-success mb-4" style="font-family: 'Montserrat'">Snap, Swipe, Meet, Repeat</h5>
        <div class="d-flex gap-3 flex-wrap">
          <a href="/auth/register" class="btn fw-bold px-4 py-2" style="background-color: #efb2e8; color: white; font-family: 'Montserrat'">Create
            an Account</a>
          <a href="/auth/login" class="btn fw-bold px-4 py-2" style="background-color: #f29e75; color: white; font-family: 'Montserrat'">Login</a>
          <a href="/learnmore" class="btn btn-outline-success fw-semibold px-4 py-2" style="font-family: 'Montserrat'">Learn More</a>
        </div>
      </div>

      <div class="col-lg-6">
        <div id="carouselAboutImages" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">
          <div class="carousel-inner rounded shadow">
            <div class="carousel-item active">
              <img src="/resources/img/about_page_images/image1.jpg" class="d-block w-100" alt="Preview 1">
            </div>
            <div class="carousel-item">
              <img src="/resources/img/about_page_images/image2.jpg" class="d-block w-100" alt="Preview 2">
            </div>
            <div class="carousel-item">
              <img src="/resources/img/about_page_images/image3.jpg" class="d-block w-100" alt="Preview 3">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselAboutImages"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselAboutImages"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>