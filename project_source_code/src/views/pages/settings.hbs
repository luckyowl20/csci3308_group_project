{{#section "scripts"}}
  <script src="/resources/js/settings/settings_script.js"></script>
{{/section}}
<style>
.dropbtn {
  color: white;
  padding: 16px;
  font-size: 16px;
  border: none;
  cursor: pointer;
}

.dropbtn:hover{
  background-color: #60b963;
}

.dropdown-content {
  display: none;
  position: relative;
  background-color: #f1f1f1;
  width: 70dvw;
  overflow: auto;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  right: 0;
  z-index: 1;
}

.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

.show {
    display: block;
}

.dropdown-button {
    display: flex;
    height: 50px;
    width: 70dvw;
    background-color: #3e8e41;
    text-align: center;
}

.submit-button {
  background-color: #cacaca;
  border-color: #e9e9e9;
  border-width: 3px;
}
.color-option {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      cursor: pointer;
      border: 2px solid transparent;
      display: inline-block;
}

input[type="radio"] {
  display: none;
}

input[type="radio"]:checked + label {
  border-color: #ffffff;
  box-shadow: 0 0 5px #aeaeae;
}
.temp{
  
}
</style>
<div>
    <h1 style="margin-bottom: 60px;">Settings</h1>
    {{!-- Account --}}
    <div class="dropdown">
        <button id = "account" class="dropbtn dropdown-button">Account</button>
        <div id="accountDropdown" class="dropdown-content">
          <a>
            <form action="/settings/account" method="post">
              {{!-- forms --}}
              <div class = "mb-3">
                  <label class="form-label">Username : {{user.username}}</label>
                  <input type="text" name = "newUsername" class="form-control"  placeholder="Enter New Username">
              </div>
              {{!-- <div class = "mb-3" style="margin-top: 10px;">
                  <label class="form-label">Account Email : '{{user.email}}'</label>
                  <input type="text" name = "newEmail" class="form-control"  placeholder="Enter New Email">
              </div> --}}
              <div class = "mb-3" style="margin-top: 10px;">
                  <label class="form-label">Change Password</label>
                  <input type="password" name = "newPassword" class="form-control"  placeholder="Enter New Password">
              </div>
              <div class = "mb-3" style="margin-top: 10px;">
                  <label class="form-label">Confirm New Password</label>
                  <input type="password" name = "passwordCheck" class="form-control"  placeholder="Confirm New Password">
              </div>
              {{!-- password conformation --}}
              <div class = "mb-3" style="margin-top: 10px;">
                  <label class="form-label"><strong>Enter password to confirm changes.</strong></label>
                  <input type="password" name = "password" class="form-control" placeholder="Enter Password" required>
              </div>
              <button class="submit-button" type = "submit" style="margin-top: 10px;"><strong>Save Changes</strong></button>
            </form>
          </a>
        </div>
    </div>
    {{!-- Privacy --}}
    <div style="margin-top: 10px;">
    <div class="dropdown">
        <button id = "privacy" class="dropbtn dropdown-button">Privacy</button>
        <div id="privacyDropdown" class="dropdown-content">
          <a>
            <form action="/settings/privacy" method="post">
              {{!-- forms --}}
              <div style="display: flex; flex-direction: row; align-items: center;">
                <label class="form-label">Public Friends</label>
                <input checked = {{settings.public_friends}} id = "message_notif_checkbox" style="margin-left: 10px; width:20px; height:20px;" name = "public_friends" type="checkbox" class="onoffswitch-checkbox"> 
              </div>
              <button class="submit-button" type = "submit" style="margin-top: 10px;"><strong>Save Changes</strong></button>
            </form>
          </a>
        </div>
    </div>
    </div>
    {{!-- Notifications --}}
    <div style="margin-top: 10px;">
    <div class="dropdown">
        <button id = "notif" class="dropbtn dropdown-button">Notifications</button>
        <div id="notifDropdown" class="dropdown-content">
          <a>
            <form action="/settings/notifications" method="post">
              {{!-- forms --}}
              <div style="display: flex; flex-direction: row; align-items: center;">
                <label class="form-label">Message Notifications</label>
                <input checked = {{settings.message_notifs}} id = "message_notif_checkbox" style="margin-left: 10px; width:20px; height:20px;" name = "messageNotifs" type="checkbox" class="onoffswitch-checkbox"> 
              </div>
              <div style="display: flex; flex-direction: row; align-items: center;">
                <label class="form-label">Match Notifications</label>
                <input checked = {{settings.match_notifs}} id = "match_notif_checkbox" style="margin-left: 10px; width:20px; height:20px;" name = "matchNotifs" type="checkbox" class="onoffswitch-checkbox"> 
              </div>
              <button class="submit-button" type = "submit" style="margin-top: 10px;"><strong>Save Changes</strong></button>
            </form>
          </a>
        </div>
    </div>
    </div>
    {{!-- Security --}}
    <div style="margin-top: 10px;">
    <div class="dropdown">
        <button id = "security" class="dropbtn dropdown-button">Security</button>
        <div id="securityDropdown" class="dropdown-content">
          <a>
            <form action="/settings/security" method="post">
              {{!-- forms --}}
              <button class="submit-button" type = "submit" style="margin-top: 10px;"><strong>Save Changes</strong></button>
            </form>
          </a>
        </div>
    </div>
    </div>
    {{!-- Chat and Messages --}}
    <div style="margin-top: 10px;">
    <div class="dropdown">
        <button id = "chat" class="dropbtn dropdown-button">Chat and Messaging</button>
        <div id="chatDropdown" class="dropdown-content">
          <a>
            <form action="/settings/chat" method="post">
              {{!-- forms --}}
              <button class="submit-button" type = "submit" style="margin-top: 10px;"><strong>Save Changes</strong></button>
            </form>
          </a>
        </div>
      </div>
      </div>
    {{!-- Apperance and Display --}}
    <div style="margin-top: 10px;">
    <div class="dropdown">
        <button id = "apperance" class="dropbtn dropdown-button">Apperance and Display</button>
        <div id="apperanceDropdown" class="dropdown-content">
          <a>
            <form id = 'apperanceForm' action="/settings/apperance" method="post">

              {{!-- forms --}}

              <label class="form-label">UI Color</label>
              <div class="d-flex gap-3">

                <!-- Red -->
                <input type="radio" name="color" id="colorRed" value="Red">
                <label for="colorRed" class="color-option" style="background-color: rgb(206, 65, 65);"></label>

                <!-- Orange -->
                <input type="radio" name="color" id="colorOrange" value="Orange">
                <label for="colorOrange" class="color-option" style="background-color: rgb(205, 126, 70)"></label>

                <!-- Yellow -->
                <input type="radio" name="color" id="colorYellow" value="Yellow">
                <label for="colorYellow" class="color-option" style="background-color: rgb(237, 221, 93);"></label>

                <!-- Green -->
                <input type = "radio" name="color" id="colorGreen" value="Green">
                <label for="colorGreen" class="color-option" style="background-color: rgb(4, 170, 109);"></label>

                <!-- Blue -->
                <input type="radio" name="color" id="colorBlue" value="Blue">
                <label for="colorBlue" class="color-option" style="background-color: rgb(56, 86, 183);"></label>

                <!-- Purple -->
                <input type="radio" name="color" id="colorPurple" value="Purple">
                <label for="colorPurple" class="color-option" style="background-color: rgb(170, 52, 177);"></label>

              </div>
              <label style="margin-top: 10px;" class="form-label">Page Apperance</label>
              <select type = "text" class="form-select" id = "mode_select">
                <option value="light">Light Mode</option>
                <option value="dark">Dark Mode</option>
              </select>
              <button class="submit-button" type = "submit" style="margin-top: 10px;"><strong>Save Changes</strong></button>
            </form>
          </a>
        </div>
    </div>
    </div>
    {{!-- dropdown script --}}
    <script>
        
    </script>
</div>