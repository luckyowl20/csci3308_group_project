{{>head}}

{{#section "scripts"}}
  <script src="/resources/js/take_picture/hbs_take_picture.js"></script>
{{/section}}

<!DOCTYPE html>
<html lang="en">
<head>

  <meta charset="UTF-8">
  <title>Webcam Capture</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

{{#if isProfile}}
  <link rel="stylesheet" href="/resources/css/take_profile_picture.css">
{{else}}
  <link rel="stylesheet" href="/resources/css/take_picture.css">
{{/if}}

<body>
  <div class="container">
        <input type="hidden" id="isProfile" value="{{isProfile}}">
  <h2>{{#if isProfile}}Update Your Profile Picture{{else}}Submit Your Daily Picture{{/if}}</h2>



    <!-- Video Container -->
    <div id="video-container">
      <video id="video" autoplay playsinline></video>
      <canvas id="canvas"></canvas>
      <button type="button" id="snap">Snap</button>
    </div>

    <!-- Upload Form -->
      <form id="uploadForm">
        {{!-- THIS IS THE PORTION THAT IS CASUING THE ISSUE WITH THE HEADER --}}
  {{#unless isProfile}}
  <div class="mb-3" id="caption-wrapper">
    <textarea
      id="caption"
      name="caption"
      class="form-control"
      placeholder="Enter a caption..."
      rows="2"
    ></textarea>
  </div>
  {{/unless}}


      <div class="mb-3 text-center">
        <button type="button" id="retake" class="btn btn-secondary me-2">Retake</button>
        <button type="button" id="uploadBtn" class="btn btn-success">Upload</button>
      </div>
    </form>
  </div>
</body>