<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Login | LuckyMoment</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #fffaf0;
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
    }
    .login-container {
      min-height: 100vh;
    }
    .left-panel {
      background-color: #efb2e8;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .left-panel h1 {
      color: white;
      font-weight: 700;
      font-size: 3rem;
      text-align: center;
    }
    .login-form {
      background-color: white;
      padding: 3rem;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      border-radius: 5px;
    }
    .form-control, .btn {
      background-color: #f29e75;
      border: none;
      color: white;
    }
    .form-control::placeholder {
      color: #ffffffcc;
    }
    .btn:hover {
      background-color: #e18855;
    }
    nav .nav-link {
      color: white;
      margin-left: 1rem;
    }
  </style>
</head>
<body>

  <!-- Main Layout -->
  <div class="container-fluid login-container d-flex">
    <!-- Left Panel -->
    <div class="col-lg-6 d-none d-lg-flex left-panel">
      <h1>Welcome<br />Back!</h1>
    </div>

    <!-- Right Panel (Login Form) -->
    <div class="col-lg-6 d-flex align-items-center justify-content-center py-5 px-4">
      <div class="login-form w-100" style="max-width: 400px;">
        <h3 class="fw-bold text-success mb-2">Login</h3>
        <p class="text-success">Welcome back! Please login to your account.</p>

        {{> message}}

        <form action="/auth/login" method="POST">
          <div class="mb-3">
            <input 
              type="text" 
              class="form-control" 
              id="username" 
              name="username" 
              placeholder="Username" 
              autocomplete="username" 
              required 
            />
          </div>

          <div class="mb-3">
            <input 
              type="password" 
              class="form-control" 
              id="password" 
              name="password" 
              placeholder="Password" 
              autocomplete="current-password" 
              required 
            />
          </div>

          <button type="submit" class="btn w-100 py-2 mb-3">Login</button>

          <p class="text-center text-muted mb-0">
            Don't have an account? <a href="/auth/register">Register</a>
          </p>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


