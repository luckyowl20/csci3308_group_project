<!DOCTYPE html>
<html>

<body>
  <main class="container py-4">
    <h2 class="mb-4">Nearby Restaurants</h2>

    {{#if restaurants.length}}
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {{#each restaurants}}
          <div class="col">
            <div class="card h-100 shadow-sm">
              {{#if photo}}
                <img src="{{photo}}" alt="{{name}}" class="card-img-top" style="height: 200px; object-fit: cover;" referrerpolicy="no-referrer">
                
              {{else}}
                <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                  No image
                </div>
              {{/if}}

              <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">{{address}}</p>
                {{#if rating}}<p class="card-text">⭐ {{rating}}</p>{{/if}}
                {{#includes ../likedPlaceIds place_id}}
                  <button class="btn btn-success text-white" disabled>
                    👍 Liked
                  </button>
                {{else}}
                  <form action="/explore/restaurants/like" method="POST" class="d-inline">
                    <input type="hidden" name="placeId" value="{{place_id}}_like">
                    <button type="submit" class="btn btn-outline-success" onClick="this.disabled=true">👍 Like</button>
                  </form>
                {{/includes}}

                {{#includes ../dislikedPlaceIds place_id}}
                  <button class="btn btn-danger text-white" disabled>
                    👎 Disliked
                  </button>
                {{else}}
                  <form action="/explore/restaurants/dislike" method="POST" class="d-inline">
                    <input type="hidden" name="placeId" value="{{place_id}}">
                    <button type="submit" class="btn btn-outline-danger">👎 Dislike</button>
                  </form>
                {{/includes}}
              </div>

            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <p>No restaurants found near you.</p>
    {{/if}}
  </main>
</body>
</html>
