{{#section 'scripts'}}
<!-- Bootstrap JS bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/resources/js/profile/profileScript.js"></script>
{{/section}}

<div class="container-fluid py-4" style="background-color: #fffaf0;">
  <div class="row">
    <!-- Left Column -->
    <div class="col-lg-4 text-center mb-4">
      <div class="rounded-circle mx-auto mb-3" style="width: 150px; height: 150px; overflow: hidden; border: 3px solid #ccc;">
        {{#if profile.profile_picture_url}}
          <img src="{{profile.profile_picture_url}}" alt="Profile Picture" style="width: 100%; height: 100%; object-fit: cover;">
        {{else}}
          <img src="https://via.placeholder.com/150?text=User" alt="Default" style="width: 100%; height: 100%; object-fit: cover;">
        {{/if}}
      </div>

      <h2 class="fw-bold text-success">{{profile.display_name}}</h2>

      {{#if isOwnProfile}}
        <button class="btn btn-outline-success btn-sm mb-3" data-bs-toggle="modal" data-bs-target="#editProfileModal">
          Edit Profile
        </button>
      {{/if}}

      <!-- Friends List (Always Visible) -->
      <h5 class="mt-4 fw-semibold text-success">Friends</h5>
      {{#if friends.length}}
        <ul class="list-unstyled">
          {{#each friends}}
            <li>
              <a href="/users/{{this.id}}" class="text-decoration-none text-success">{{this.username}}</a>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p class="text-muted"><em>No friends yet.</em></p>
      {{/if}}
    </div>

    <!-- Right Column -->
    <div class="col-lg-8">
      <h4 class="fw-semibold text-success">Biography</h4>
      <p>{{profile.biography}}</p>

      <h4 class="fw-semibold text-success">Interests</h4>
      <p>{{profile.interests}}</p>

      <h4 class="fw-semibold text-success">Birthday</h4>
      <p>{{formatDate profile.birthday}}</p>

      <h4 class="fw-semibold text-success">Favorite Song</h4>
      {{#if profile.spotify_song_id}}
        <iframe style="border-radius:12px" src="https://open.spotify.com/embed/track/{{profile.spotify_song_id}}"
          width="100%" height="80" frameBorder="0"
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy">
        </iframe>
      {{else}}
        <p><em>No favorite song selected yet.</em></p>
      {{/if}}

      <!-- Memories or Week View Section -->
      <div class="mt-5">
        {{#if isOwnProfile}}
          <h4 class="fw-bold text-success mb-3">Memories</h4>
        {{else}}
          <h4 class="fw-bold text-success mb-3">Week View</h4>
        {{/if}}

        {{#if recentPhotos.length}}
          <div class="row row-cols-1 row-cols-md-2 g-3">
            {{#each recentPhotos}}
              <div class="col text-center">
                <img src="{{this.url}}" alt="Memory" class="img-fluid rounded shadow" style="max-height: 200px; object-fit: cover;">
                <p class="text-muted mt-1">{{formatDate this.created_at}}</p>
              </div>
            {{/each}}
          </div>

          {{#if isOwnProfile}}
            <div class="text-center mt-3">
              <a href="/memories" class="btn btn-outline-success">See More Memories</a>
            </div>
          {{/if}}
        {{else}}
          <p class="text-muted"><em>No photos uploaded this week.</em></p>
        {{/if}}
      </div>
    </div>
  </div>
</div>

{{> editProfileModal}}